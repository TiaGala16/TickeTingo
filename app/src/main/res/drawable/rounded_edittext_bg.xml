<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Slightly transparent dark background -->
    <solid android:color="#22242A" />  <!-- soft dark gray tone -->

    <!-- Smooth rounded corners -->
    <corners android:radius="28dp" />

    <!-- Optional subtle border for definition -->
    <stroke
        android:width="1dp"
        android:color="#33363F" />

    <!-- Soft inner shadow-like effect -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp" />
</shape>
