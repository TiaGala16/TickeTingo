<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/bg_colour"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CreateEventActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Title -->

            <TextView
                android:id="@+id/createEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Event"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#E49AF7"
                android:gravity="center"
                android:layout_marginTop="50dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/createEventSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill in the details below to create a new event"
                android:textColor="#B3FFFFFF"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="30dp" />

            <!-- Event Name -->
            <EditText
                android:id="@+id/eventName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Event Name"
                android:textColor="#FFFFFF"
                android:textColorHint="#99FFFFFF"
                android:background="@color/input_field_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Event Date -->
            <EditText
                android:id="@+id/DateEvent"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Event Date"
                android:textColor="#FFFFFF"
                android:textColorHint="#99FFFFFF"
                android:background="@color/input_field_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Event Time -->
            <EditText
                android:id="@+id/TimeEvent"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Event Time"
                android:textColor="#FFFFFF"
                android:textColorHint="#99FFFFFF"
                android:background="@color/input_field_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Location"
                android:textColor="#FFFFFF"
                android:textColorHint="#99FFFFFF"
                android:background="@color/input_field_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Committee Spinner -->
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/input_field_bg"
                android:layout_marginBottom="16dp"
                android:paddingStart="10dp" />

            <!-- Price -->
            <EditText
                android:id="@+id/bookTicket"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Ticket Price (â‚¹)"
                android:inputType="numberDecimal"
                android:textColor="#FFFFFF"
                android:textColorHint="#99FFFFFF"
                android:background="@color/input_field_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Info -->
            <EditText
                android:id="@+id/InfoEvent"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Event Description"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:textColor="#FFFFFF"
                android:textColorHint="#99FFFFFF"
                android:background="@color/input_field_bg"
                android:padding="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Total Tickets -->

            <!-- Upload Image Button -->
            <EditText
                android:id="@+id/totalticket"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="24dp"
                android:background="@color/input_field_bg"
                android:hint="Total Tickets"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#99FFFFFF" />

            <Button
                android:id="@+id/selectImageBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Upload Event Image"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@color/btn_color"
                android:layout_marginBottom="16dp" />

            <!-- Image Preview -->
            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:contentDescription="Event image preview"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginBottom="32dp"
                android:background="@drawable/rounded_border_bg" />

            <!-- Create Button -->
            <Button
                android:id="@+id/createBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Create Event"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:background="@color/btn_color"
                android:layout_marginBottom="40dp" />



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>