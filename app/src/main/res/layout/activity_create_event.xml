<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/bg_colour"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CreateEventActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/eventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Name of the Event"
                android:inputType="text"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                tools:layout_editor_absoluteX="76dp"
                tools:layout_editor_absoluteY="30dp" />

            <EditText
                android:id="@+id/DateEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Enter the Date"
                android:inputType="text"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="108dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/eventPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="Enter the Price"
                android:inputType="numberDecimal"
                android:textColorHint="#FFFF"
                android:textColor="#FFFF"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="295dp" />

            <EditText
                android:id="@+id/InfoEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Enter information about the Event"
                android:inputType="text"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF" />

            <EditText
                android:id="@+id/totalticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Enter total no of Tickets"
                android:inputType="number"
                android:textColor="#FFFF"
                android:textColorHint="#FFFF" />

            <Button
                android:id="@+id/selectImageBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Upload the image" />
            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:contentDescription="Event image preview"
                android:src="@drawable/ic_launcher_background" />

            <Button
                android:id="@+id/createBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Create Event" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>